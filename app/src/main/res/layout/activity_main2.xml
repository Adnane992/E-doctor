<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_main_foreground"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/about_Main"

        android:layout_width="83dp"
        android:layout_height="29dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/archivo_black"
        android:text="About"
        android:textAlignment="center"
        android:textColor="#3E3B3B"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_Main"
        android:layout_width="165dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        app:srcCompat="@mipmap/login" />

    <Button
        android:id="@+id/button2_Main"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/radius_10"
        android:backgroundTint="#7400B8"
        android:text="Set reminders"
        android:textStyle="bold"
        app:cornerRadius="20px"
        app:layout_constraintBottom_toTopOf="@+id/textView2_Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Main"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/textView_Main"
        android:layout_width="363dp"
        android:layout_height="32dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Allow us to remember pill time for you"
        android:textAlignment="center"
        android:textColor="#118ab2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Main" />

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="363dp"
        android:layout_height="32dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="57dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="welcome message"
        android:textAlignment="center"
        android:textColor="#2a085c"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Main" />

    <TextView
        android:id="@+id/textView2_Main"
        android:layout_width="352dp"
        android:layout_height="33dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Perform a primary health checkup"
        android:textAlignment="center"
        android:textColor="#118ab2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Main" />

    <Button
        android:id="@+id/button1_Main"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/radius_10"
        android:backgroundTint="#5E60CE"
        android:text="Health check"
        android:textStyle="bold"
        app:cornerRadius="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_Main"
        app:layout_constraintVertical_bias="0.05" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_history" />

    <ImageButton
        android:id="@+id/logoutB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logout" />

</androidx.constraintlayout.widget.ConstraintLayout>