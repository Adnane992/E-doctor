<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_main_foreground"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/about_Main"

        android:layout_width="83dp"
        android:layout_height="29dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/archivo_black"
        android:text="About"
        android:textAlignment="center"
        android:textColor="#3E3B3B"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2_Main"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="272dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="If you are a doctor, let us perform the first checkup for you"
        android:textAlignment="center"
        android:textColor="#118ab2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Main" />

    <ImageView
        android:id="@+id/image_Main"
        android:layout_width="229dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098"
        app:srcCompat="@mipmap/login" />

    <TextView
        android:id="@+id/textView_Main"
        android:layout_width="363dp"
        android:layout_height="32dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Allow us to remember pill time for you"
        android:textAlignment="center"
        android:textColor="#118ab2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Main" />

    <Button
        android:id="@+id/button1_Main"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/radius_10"
        android:backgroundTint="#5E60CE"
        android:text="Health check"
        android:textStyle="bold"
        app:cornerRadius="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_Main"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/button2_Main"
        android:layout_width="162dp"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/radius_10"
        android:backgroundTint="#7400B8"
        android:text="Set a reminder"
        android:textStyle="bold"
        app:cornerRadius="20px"
        app:layout_constraintBottom_toTopOf="@+id/textView2_Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Main"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_history" />

</androidx.constraintlayout.widget.ConstraintLayout>